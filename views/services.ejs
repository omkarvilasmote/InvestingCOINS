<%- include('comman/header')%>

<h2 class="contact-title">Contact Us</h2>
<div class="contact-container">
  <div class="contact-icons">
    <div class="contact-box whatsapp">
      <a href="https://wa.me/your-whatsapp-number" target="_blank">
        <i class="fab fa-whatsapp"></i>
        <p>WhatsApp</p>
      </a>
    </div>
    <div class="contact-box telegram">
      <a href="https://t.me/your-telegram-id" target="_blank">
        <i class="fab fa-telegram-plane"></i>
        <p>Telegram</p>
      </a>
    </div>
    <div class="contact-box telegram">
      <a href="https://t.me/your-telegram-id" target="_blank">
        <i class="fab fa-telegram-plane"></i>
        <p>Channel</p>
      </a>
    </div>
  </div>
</div>

<style>
    body{
      background-color: #967aa1;

    }
  .contact-container {
    display: flex;
    justify-content: center;
    text-align: center;
    padding: 20px;
    background-color: #967aa1;
  }

  .contact-title {
    color: white;
    text-align: center;
    padding: 5px 10px;
    margin-top: 10px;
    border-radius: 5px;
  }

  .contact-icons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 10px;
  }

  .contact-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #f0f0f0;
    border: 1px solid #ddd;
    padding: 15px;
    width: 90px;
    height: 90px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    cursor: pointer;
  }

  .contact-box a {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: #333;
  }

  .contact-box:hover {
    background-color: #ddd;
  }

  .contact-box i {
    font-size: 40px;
    margin-bottom: 10px;
  }

  /* Add specific background colors for each box */
  .whatsapp {
    background-color: #2ecc71;
  }

  .telegram {
    background-color: #3498db;
  }

  .email {
    background-color: #e74c3c;
  }

  /* Add responsive styling as needed */
  @media (max-width: 768px) {
    .contact-icons {
      flex-direction: column;
    }
  }
</style>  

<%- include('comman/footer')%>
